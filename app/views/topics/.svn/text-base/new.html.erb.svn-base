<table style="width:100%">
  <tr>
    <td style="padding:0px 10px;vertical-align:top;">
      <a href="<%= topics_path(:forum_id => @forum_id) %>" class="pull-right">Back to Topics</a>
      <h1>Start New Threads</h1>
      <div class="sp5"></div>
      <div class="b-top-right">
      <div class="sp10"></div>
        <% form_for :topic, :url => topics_path do |f| -%>
          <%= hidden_field_tag 'forum_id',@forum_id %>
          <p>Subject:<br /><%= f.text_field :name, :size => 60, :style => "width:300px;" -%></p>
          <p>First Post:<br /><%= text_area :post, :body, :rows => 5, :cols => 150, :style => "width:500px;" -%></p>
          <%= submit_tag 'Post', :class => "btn btn-danger" %>
        <% end -%>
      </div>
    </td>
    <td style="width:300px;vertical-align:top;">
      <script type="text/javascript"><!--
            google_ad_client = "ca-pub-3833946424381349";
            /* rect_medium_300x250 */
            google_ad_slot = "1294151423";
            google_ad_width = 300;
            google_ad_height = 250;
            //-->
      </script>
      <script type="text/javascript" src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
      </script>
      <div class="sp10"></div>
    </td>
  </tr>
</table>
