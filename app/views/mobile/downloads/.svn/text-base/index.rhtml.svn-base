<table>
<% for download in @new_downloads %>
<tr>
<td>
<img src="/<%= download.ss1_thumb.to_s %>" alt="<%= download.title %>" style="width:60px;height:80px;"/>
</td>
<td>
<h3><%= download.title %></h3>
<p><%= download.short_description %></p>
<a href="<%= wap_download_show_url(download.title.tr(" ","_")) %>">Download</a>
</td>
</tr>
<% end %>
</table>
