<h1>New worldcup2011</h1>

<% form_for :worldcup2011, :url => wc_creat_comment_url do |f| -%>

  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :on %><br />
    <%= f.text_field :on %>
  </p>
  <p>
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', wc_home_url %>
