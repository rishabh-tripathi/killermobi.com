<%
   key = get_random_spam_id
%>

<table style="width:100%">
  <tr>
    <td style="padding:0px 10px;vertical-align:top;">
      <a href="<%= forums_url %>" class="pull-right">Back to Forums</a>
      <h1>Post Reply</h1>
      <ul class="breadcrumb" style="margin:0px;">
        <li><a href="<%= forums_path %>">Forums</a> <span class="divider">/</span></li>
        <li><a href="<%= forum_path(@topic.forum) %>"><%= @topic.forum.name %></a> <span class="divider">/</span></li>
        <li><%= link_to @topic.name, posts_path(:forum_id => @forum,
              :topic_id => @topic) -%><span class="divider">/</span></li>
        <li class="active">Post Reply</li>
      </ul>
      <div class="sp5"></div>
      <div class="b-top-right" style="padding: 10px 10px 0px 0px;">
        <form id="post_response" name="post_response" action="<%= submit_post_url %>">
          <input type="hidden" id="_user_auth_key" name="_user_auth_key" value=""></input>
          <input type="hidden" name="forum_id" value="<%= @topic.forum.id %>"></input>
          <input type="hidden" name="topic_id" value="<%= @topic.id %>"></input>
          <p><br /><textarea id="body" name="body" rows="8" placeholder="Post your reply" cols="60" style="width:500px;"></textarea></p>
          <input type="submit" class="btn btn-danger" value="Post Reply" onclick="set_spam_id('_user_auth_key','<%= key %>');document.getElementById('post_response').onsubmit();"></input> or
          <%= link_to 'Cancel', posts_path(:forum_id => @forum,
              :topic_id => @topic) -%>
        </form>
      </div>
    </td>
    <td style="width:300px;vertical-align:top;">
      <script type="text/javascript"><!--
            google_ad_client = "ca-pub-3833946424381349";
            /* rect_medium_300x250 */
            google_ad_slot = "1294151423";
            google_ad_width = 300;
            google_ad_height = 250;
            //-->
      </script>
      <script type="text/javascript" src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
      </script>
      <div class="sp10"></div>
    </td>
  </tr>
</table>
