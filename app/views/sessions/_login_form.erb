<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :style => 'margin:0px;' }) do |f| %>
  <div><%= f.label :email %>
    <input type="email" value="" size="30" name="user[email]" id="user_email" style="width:240px;" />
  </div>
  <div><%= f.label :password %>
    <input type="password" size="30" name="user[password]" id="user_password" style="width:240px;" />
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="sp5"></div>
    <input type="checkbox" value="1" name="user[remember_me]" id="user_remember_me" style="margin:0px;"/>&nbsp;&nbsp;Remember Me
  <% end -%>
  <div class="sp2"></div>
  <input type="submit" value="Login" class="btn btn-danger pull-right" />
  <div style="clear:both;"></div>
<% end %>
