<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <div><%= f.label :email %>
    <input type="email" value="" size="30" name="user[email]" id="user_email" style="width:240px">
  </div>

  <div><%= f.label :password %>
    <input type="password" size="30" name="user[password]" id="user_password" style="width:240px">
  </div>

  <div><%= f.label :password_confirmation %>
    <input type="password" size="30" name="user[password_confirmation]" id="user_password_confirmation" style="width:240px">
  </div>

  <div class="sp5"></div>
  <input type="submit" value="Signup" class="btn btn-danger pull-right" />
  <div style="clear:both;"></div>
<% end %>
